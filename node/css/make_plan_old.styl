//左の招待客のリストが表示されるスライドバー
.left_sidebar
  width 98%
  text-align center
  thead tr
    background-color #666
    color #FFF
  tbody
    background #F5F8E5
  .no
    width 21px
  .sex
    width 38px
  .group
    width 38px
  .name
    width 104px
    background-repeat no-repeat
    background-position 0px 50%
  .tablename
    width 32px

//真ん中の招待客を配席するテーブル
.make_plan_tables
  float left
  width 198px
  p
    margin-top 0px
    margin-bottom 0px
    vertical-align middle
  .seat
    width 80px
    height 30px
    margin 1px 2px
    border #A2A7BC 1px solid
    float left
    padding 0px
    overflow hidden
  .space
    float left
    text-align center
    width 25px
    height 30px
a
  cursor pointer

.drag_box
  position absolute
  top 0px
  left 0px

